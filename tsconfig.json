{
  "compileOnSave": true,
  "compilerOptions": {
    "noUnusedLocals": true,
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es6",
      "es2016.array.include",
      "dom"
    ],
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "build",
    "sourceMap": true,
    "skipLibCheck": true,
    "watch": true
  },
  "include": [
    "app/**/*.ts"
  ]
}
